<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
	<class name="vvr.onlinestore.product.Size" table="size">
		<id name="id" column="id">
			<generator class="native"/>
		</id>
		
		<property name="xlSize" column="XL"/>
		<property name="xxlSize" column="XXL"/>
		<property name="sSize" column="S"/>
		<property name="mSize" column="M"/>
		
		<one-to-one name="product" class="vvr.onlinestore.product.Product"></one-to-one>
	</class>

</hibernate-mapping>